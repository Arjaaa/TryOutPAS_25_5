<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style umum untuk kontainer item -->
    <style name="SurahItemContainer">
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Nama Surah -->
    <style name="SurahName">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- Nomor Surah -->
    <style name="SurahNumber">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Jumlah Ayat -->
    <style name="AyahCount">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#616161</item>
    </style>

    <!-- Arti Surah -->
    <style name="SurahMeaning">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#424242</item>
    </style>
</resources>
